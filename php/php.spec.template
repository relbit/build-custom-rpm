Patch1:		0001-CVE-2014-0237.patch
Patch2:		0001-CVE-2014-0238.patch
Patch3:		0001-CVE-2014-2497.patch
%endif

%global phpname		RPM_NAME
%global peardir		%{_datadir}/pear

