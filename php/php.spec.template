Name:           RPM_NAME
Summary:        RPM_SUMMARY
Version:        RPM_VERSION
%define         relver          RPM_RELEASE
Release:        %{relver}%{?dist}
License:        RPM_LICENSE
URL:            RPM_URL
Source0:        RPM_SOURCE0
Distribution:   RPM_DISTRIBUTION
Packager:       RPM_PACKAGER
%define _prefix RPM_PREFIX

%if "%{version}" == "5.3.28"
